<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewHeader">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">43dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">43dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>